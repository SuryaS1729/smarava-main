{
  "expo": {
    "name": "smarava",
    "slug": "smarava",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon2.png",
    "scheme": "smarava",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FB5600"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.surya7314.smarava"
    },
    "android": {
      // "adaptiveIcon": {
      //   "foregroundImage": "./assets/images/adaptive-icon.png",
      //   "backgroundColor": "#ffffff"
      // },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.surya7314.smarava"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
       [
        "expo-font",
        {
          "android": {
            "fonts": [
              {
                "fontFamily": "Poppins",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Poppins-Regular.ttf",
                    "weight": 400,
                    "style": "normal"
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/Poppins-Regular.ttf"
            ]
          }
        }
      ],
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
